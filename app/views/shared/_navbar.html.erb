<div class="navbar-wagon">
  <!-- Logo -->
  <div class="navbar-wagon-left">
    <%= link_to 'Mr. Cocktail', root_path, class: "navbar-text-brand" %>
  </div>
  <!-- Search form -->
  <div class="search-bar-wrapper hidden-xs hidden-sm">
    <form action="" class="navbar-wagon-search">
      <i class="fa fa-search"></i>
      <input type="text" class="navbar-wagon-search-input">
    </form>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right">

    <!-- Different navigation if login or not -->
    <div class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>

        <!-- Profile picture and dropdown -->
        <div class="navbar-wagon-item">
          <div class="dropdown">
            <%= image_tag avatar_url(current_user), class: "avatar-bordered dropdown-toggle", id:"navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li>
                <%= link_to "#" do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>
                <hr>
                <li>
                  <%= link_to new_cocktail_path do%>
                    <i class="fa fa-glass"></i>Add Cocktail
                  <% end %>
                </li>
              </li>
            </ul>
          </div>
        </div>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, {class: "navbar-wagon-item navbar-wagon-link"} %>
        <%= link_to "Sign In", new_user_session_path, {class: "navbar-wagon-item navbar-wagon-link"} %>

      <% end %>
   </div>
  </div>
</div>
