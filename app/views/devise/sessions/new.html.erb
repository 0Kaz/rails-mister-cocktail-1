<div class="popover-container">
  <div class="signup-login-btn-container">
    <%= link_to "Log in with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-block btn-large signup-login-btn-xl btn-facebook" %>
    <span class="icon-facebook">
      <i class="fa fa-facebook"></i>
    </span>
  </div>

  <div class="signup-or-separator">
    <span class="signup-or-separator-text">or</span>
    <hr>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
    </div>

    <div clas="row">
      <div class="col-md-6 text-muted popover-row float-left">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="col-md-6 text-right popover-row float-right">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-muted" %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-large btn-block signup-login-btn-xl" %>
    </div>
  <% end %>

  <hr>
  <div>
    <div class="signup-login-switch-text">
      Don't have an account?
    </div>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-muted", class: "btn btn-default float-right" %>
  </div>
</div>
