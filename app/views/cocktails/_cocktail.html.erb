<div class="col-xs-6 col-sm-4">
  <div class="cocktail-card">
    <%= link_to cocktail_path(cocktail) do %>
      <div>
        <%= image_tag cocktail.photo, class: "img-responsive" %>
      </div>
      <div>
        <%= cocktail.name.upcase %>
        <%= link_to "Delete", cocktail_path(cocktail), method: :delete %>
      </div>
    <% end %>
  </div>
</div>
